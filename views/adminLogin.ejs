    <section>
        <form action="/adminLogin" method="post" id="form">
            <h4 class="mb-3">Admin Login</h4>
            <div class="mb-4">
                <% if (message =='your account does not exist') { %>
                    <label for="" id="emailLabel" class="text-danger mb-1"><%=message%></label>
                    <%} else { %>
                        <label for="" id="emailLabel" class="text-danger mb-1" style="display: none;"></label>
                    <% } %>
               
                <input type="email" class="form-control" id="InputEmail" placeholder="enter your email" name="email">
            </div>
            <div class="mb-4">
                <% if (message =='your password is incorrect') { %>
                    <label for="" id="passwordLabel" class="text-danger mb-1"><%=message%></label>
                    <%} else { %>
                         <label for="" id="passwordLabel" class="text-danger mb-1" style="display: none;"></label>
                    <% } %>
               
                <input type="password" class="form-control" id="InputPassword" placeholder="enter your password" name="password"
                    >
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </section>

